{
  "family": "shelcaster-vp",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::124355640062:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::124355640062:role/lambda-dynamodb-role",
  "containerDefinitions": [
    {
      "name": "shelcaster-vp",
      "image": "124355640062.dkr.ecr.us-east-1.amazonaws.com/shelcaster-vp:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3001,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/shelcaster-vp",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs",
          "awslogs-create-group": "true"
        }
      }
    }
  ]
}

