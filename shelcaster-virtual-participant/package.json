{
  "name": "shelcaster-virtual-participant",
  "version": "1.0.0",
  "description": "Virtual participant for Shelcaster that plays tracklist audio in IVS Real-Time stages",
  "type": "module",
  "scripts": {
    "start": "node server/index.js",
    "dev": "node --watch server/index.js",
    "build": "echo 'No build step required'",
    "docker:build": "docker build -t shelcaster-vp .",
    "docker:run": "docker run -p 3001:3001 shelcaster-vp"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/client-ivs-realtime": "^3.0.0",
    "@aws-sdk/client-lambda": "^3.0.0",
    "@aws-sdk/client-s3": "^3.0.0",
    "@aws-sdk/lib-dynamodb": "^3.0.0",
    "@aws-sdk/util-dynamodb": "^3.0.0",
    "amazon-ivs-web-broadcast": "^1.8.0",
    "puppeteer": "^21.0.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0"
  }
}

